{
  "name": "pure-pursuit-visualizer",
  "version": "1.0.0",
  "description": "Web app that allows you to visualize the actions taken by an adaptive pure pursuit controller. An adaptive pure pursuit controller is a path-following algorithm that is frequently used in the First Robotic Competition.",
  "main": "index.js",
  "scripts": {
    "start": "nodemon server.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "clean": "rimraf ./build && rimraf ./dist",
    "compile-ts": "npx tsc && browserify ./build/js/sketch.js -o ./dist/js/bundle.js && node-minify --compressor uglify-js --input './dist/js/bundle.js' --output './dist/js/bundle.min.js'", 
    "compile-sass": "sass ./src/scss/main.scss:./dist/css/main.css",
    "build": "npm run clean && npm run compile-ts && npm run compile-sass"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Ryan10145/Pure-Pursuit-Visualizer.git"
  },
  "author": "ryan10145",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/Ryan10145/Pure-Pursuit-Visualizer/issues"
  },
  "homepage": "https://github.com/Ryan10145/Pure-Pursuit-Visualizer#readme",
  "dependencies": {
    "express": "^4.17.1"
  },
  "devDependencies": {
    "@node-minify/core": "^6.0.0",
    "@node-minify/uglify-js": "^6.0.0",
    "browserify": "^16.5.1",
    "rimraf": "^3.0.2",
    "sass": "^1.26.9",
    "typescript": "^3.9.5"
  }
}
